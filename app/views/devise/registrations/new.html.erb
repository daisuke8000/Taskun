<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <main class="py-4" id="main-content">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="card">
            <div class="card-header bg-primary text-white font-weight-bold">登録</div>
            <div class="card-body">
              <div class="form-group">
                <%= f.label :name, '名前', class: "control-label" %>
                <span class="badge badge-danger">必須</span>
                <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control', placeholder: "2文字以上（例：鈴木一郎）" %>
              </div>
              <div class="form-group">
                <%= f.label :email, class: "control-label" %>
                <span class="badge badge-danger">必須</span>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-input', placeholder: "メールアドレス" %>
              </div>
              <div class="form-group">
                <%= f.label :password, class: "control-label" %>
                <span class="badge badge-danger">必須</span>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br/>
                <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: "8文字以上の英数字のパスワード" %>
              </div>
              <div class="form-group">
                <%= f.label :password_confirmation, class: "control-label" %>
                <span class="badge badge-danger">必須</span>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.submit "いろいろ同意して登録する", class: 'btn btn-primary d-block mx-auto' %>
<% end %>
<div class="mt-5 text-center">
  <%= render "devise/shared/links" %>
</div>
</div>
</div>
</div>
</div>
</div>
</div>
</main>