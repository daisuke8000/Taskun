<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= flash[:alert]%>

  <main class="py-4" id="main-content">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="card">
            <div class="card-header bg-primary text-white font-weight-bold">ログイン</div>
            <div class="card-body">
              <form method="POST" action="https://grouptask.biz/login">
                <input type="hidden" name="_token" value="acT3rnKCz612tcOMAfaFricXlnpkynFwjdxPNR95">
                <div class="form-group row">
                  <%= f.label :email, 'メールアドレス', class: 'col-sm-4 col-form-label text-md-right' %>
                  <div class="col-md-6">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-input', placeholder: "メールアドレス" %>
                  </div>
                </div>
                <div class="form-group row">
                  <%= f.label :password, 'パスワード', class: 'col-md-4 col-form-label text-md-right' %><br/>
                  <div class="col-md-6">
                    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control form-input', placeholder: "パスワード" %>
                  </div>
                </div>
                <div class="form-group row">
                  <div class="col-md-6 offset-md-4">
                    <div class="form-check">
                      <% if devise_mapping.rememberable? %>
                        <div class="field">
                          <%= f.check_box :remember_me %>
                          <%= f.label :remember_me %>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </div>
                <div class="form-group row mb-0">
                  <div class="col-md-8 offset-md-4">
                    <div class="actions">
                      <%= f.submit "ログイン", class: 'btn btn-primary' %>
                      <%= link_to "パスワードをお忘れですか?", new_password_path(resource_name) %><br/>
                    </div>
                  </div>
                </div>
              </form>
              <div class="social-divider">
              <span class="social-text">
                または
              </span>
              </div>
              <!--  =============SNS認証は後のタスクで使うかも===============  -->
              <div class="text-center">
                <a href="#" class="btn social social-facebook"><i class="fab fa-fw fa-facebook-f"></i>Facebook
                  でログイン</a>
                <a href="#" class="btn social social-twitter"><i class="fab fa-fw fa-twitter"></i>Twitter
                  でログイン</a>
              </div>
              <div class="mt-5 text-center">
                <%= link_to "会員登録されていない方はこちら", new_registration_path(resource_name), class: "nav-link" %>
              </div>
<% end %>
</div>
</div>
</div>
</div>
</div>
</main>